{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug WP",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}/wordpress"
      },
      "xdebugSettings": {
        "max_children": 128,
        "max_data": 1024,
        "max_depth": 3
      }
    }
  ]
}
